<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create Post</title>
    <link rel="shortcut icon" href="/img/tabbar.png" type="image/x-icon">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Work+Sans:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
    <link
    href="https://cdn.jsdelivr.net/npm/remixicon@4.3.0/fonts/remixicon.css"
    rel="stylesheet"
/>
<!-- <link rel="stylesheet" href="/css/profile.css"> -->
<link rel="stylesheet" href="/css/home.css">

</head>
<body>
    <div id="m">
        <div class="l">
            <img src="/img/white-logo.png" alt="">
            <div class="route">
                
                <div class="home dds current">
                    
                    <a href="/home"> <h4><i class="ri-home-line"></i> Home</h4></a>
                </div>
                <div class="Search dds">
                    
                    <a href="/search"><h4><i class="ri-search-line"></i> Search</h4></a>

                </div>
                <div class="Explore dds">
                    
                    <h4><i class="ri-compass-3-line"></i> Explore</h4>
                </div>
                

                    <div class="Create dds "> 
                         <a href="/post"> <h4><i class="ri-add-circle-line"></i> Create</h4></a>
                    </div>
              
                <div class="Profile dds ">
                    
                    <a href="/profile">

                        <h4><i class="ri-map-pin-user-fill"></i> Profile</h4>
                    </a>
                </div>
            </div>
        </div>
        <div class="r">
            <div class="main">
                <div class="story">
                    <div class="ls">
                        <div class="mini-c">
                            <img src="/img/upload/<%= user.profilepic  %>" class="sti" alt="">
                            <p class="story-username"><%= user.username  %></p>
                        </div>
                    </div>
                    <div class="rs">
                        <div class="mini-cc"></div>
                        


                    </div>
                </div>
                <div class="usersposts">
      <% posts.reverse().forEach(function(post){ %>
        <div class="post">
            <div class="top">
                <div class="top-l" style="display: flex; align-items: center; justify-content: center; gap: 10px;">

                    <h3><%= post.user.username  %></h3>
                    <h3 class="time"><%= dater(new Date(post.date)) %></h3>
                </div>
                <i class="ri-more-2-line"></i>

            </div>
            <hr>
            <div class="bottom">
                <img src="/img/upload/<%= post.picture  %>" alt="">

            </div>
            <div class="last">
                <div class="last-l">

                    <i class="ri-heart-line"></i>
                    <i class="ri-chat-3-line"></i>
                    <i class="ri-share-forward-line"></i>
                </div>
                <div class="last-r">

                    <i class="ri-bookmark-2-line"></i>
                </div>
            </div>
            <p class="caption"><%= post.caption%></p>
            <div class="comments">
                <h5>Comments</h5>
            </div>
        </div>
        <% }) %>
                   
                   

                </div>
            </div>
            

        </div>
    </div>   